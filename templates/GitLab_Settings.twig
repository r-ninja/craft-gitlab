{% import "_includes/forms" as forms %}

{% includeCssResource "gitlab/css/GitLab_Style.css" %}
{% includeJsResource "gitlab/js/GitLab_Script.js" %}

{{ forms.textField({
    label: 'GitLab Host URL',
    instructions: 'ex: http://gitlab.example.com/ (add trailing slash)',
    id: 'gitlab_host',
    name: 'gitlab_host',
    value: settings['gitlab_host']})
}}

{{ forms.textField({
    label: 'Private Token',
    instructions: 'You can find or reset your private token in your GitLab account page (/profile/account)',
    id: 'gitlab_privatetoken',
    name: 'gitlab_privatetoken',
    value: settings['gitlab_privatetoken']})
}}
